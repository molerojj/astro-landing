---
const { title, description, link, image } = Astro.props
---

<div class="flex flex-col mb-2 md:flex-row md:text-left text-center lg:mx-0 mx-10">
    <div class="flex-1 flex justify-end">
        <img src={image} alt="projects" class="w-72 m-auto" />
    </div>
    <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{title}</h2>
        <p class="my-6">{description}</p>
        <a href={link} class=" bg-indigo-500 px-3 py-2 hover:bg-indigo-400">
            More info
        </a>
    </div>
    
</div>