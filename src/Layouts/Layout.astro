---
import Footer from '../components/Footer.astro'
import '../styles/Layout.css'

interface Props {
    title: string;
}

const { title } = Astro.props;


---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Astro Landing | {title}</title>
</head>
<body>
    <main class="mx-auto container md:pt-10 md:px-20">
        <slot />
    </main>
    <Footer />
</body>
</html>

<style is:global>
    body {
        background: #0f0c29;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to bottom, #24243e, #302b63, #0f0c29);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to bottom, #24243e, #302b63, #0f0c29); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    }
</style>
